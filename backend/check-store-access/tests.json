{
  "tests": [
    {
      "name": "OPTIONS request returns CORS headers",
      "method": "OPTIONS",
      "path": "/",
      "expectedStatus": 200
    },
    {
      "name": "No token returns 401",
      "method": "GET",
      "path": "/",
      "expectedStatus": 401,
      "expectedBody": {
        "error": "string"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Valid CEO token returns access",
      "method": "GET",
      "path": "/",
      "headers": {
        "X-Auth-Token": "573967828"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "hasAccess": true,
        "role": "ceo"
      },
      "bodyMatcher": "partial"
    }
  ]
}
